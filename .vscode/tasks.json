{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "dotnet build ${input:project} -t:${input:target} -p:Configuration=${input:configuration}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            // special target as it uses additional arguments
            // we only support android at this time.
            "label": "Run",
            "type": "shell",
            "command": "dotnet build ${input:project} \"-t:Run\" --no-restore -p:TargetFramework=net6.0-android -p:AndroidAttachDebugger=${input:attach} -p:AndroidSdbHostPort=10000 -p:Configuration=${input:configuration}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
    ],
    "inputs": [
        {
          "id": "configuration",
          "type": "pickString",
          "default": "Debug",
          "description": "Select msbuild Build Configuration.",
          "options": [
              "Debug",
              "Release"
            ]
        },
        {
            // Add additional projects here. They will be available in the drop down
            // in vscode.
            "id": "project",
            "type": "pickString",
            "default": "HelloAndroid/HelloAndroid.csproj",
            "description": "Pick the Project you want to build.",
            "options": [
                "HelloAndroid/HelloAndroid.csproj",
                "HelloForms/HelloForms.csproj",
            ]
        },
        {
            "id": "target",
            "type": "pickString",
            "default": "Build",
            "description": "Select MSBuild Target to run.",
            "options": [
                "Build",
                "Install",
                "SignAndroidPackage",
                "Clean"
            ]
        },
        {
            "id": "attach",
            "type": "pickString",
            "default": "Build",
            "description": "Attach Debugger?",
            "options": [
                "true",
                "false",
            ]
        },
      ]
}