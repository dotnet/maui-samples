<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomizeHandlersDemo.Views.CustomizeEntryPartialMethodsPage"
             Title="Customize Entry with partial methods">
    <VerticalStackLayout Margin="20"
                         Spacing="10">
        <Label Text="The Entry below has its text selected on focus." />
        <Entry Text="The quick brown fox jumped over the lazy dog."
               HandlerChanged="OnEntryHandlerChanged"
               HandlerChanging="OnEntryHandlerChanging" />
    </VerticalStackLayout>
</ContentPage>