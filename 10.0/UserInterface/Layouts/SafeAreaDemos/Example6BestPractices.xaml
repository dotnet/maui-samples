<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Example6BestPractices"
             SafeAreaEdges="All"
             Title="Best Practices">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Combining SafeAreaEdges with Padding"
               FontSize="24"
               FontAttributes="Bold" />
        <Label Text="SafeAreaEdges controls automatic safe area padding. You can still add your own padding for visual spacing."
               FontSize="16" />
        <Label Text="This page uses SafeAreaEdges='All' to respect all safe areas, plus custom Padding='20' on the VerticalStackLayout for additional visual spacing."
               FontSize="14"
               TextColor="Gray" />
        <BoxView Color="#512BD4" HeightRequest="100" />
        <Label Text="Content with both safe area and custom padding"
               FontSize="16"
               HorizontalTextAlignment="Center" />
        <BoxView Color="#2B88D4" HeightRequest="100" />
    </VerticalStackLayout>
</ContentPage>
