<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeAreaDemos.Views.Example3KeyboardAware"
             Title="Keyboard-Aware Layout">
    <Grid RowDefinitions="*,Auto" SafeAreaEdges="SoftInput">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="10">
                <Label Text="User Profile" FontSize="24" FontAttributes="Bold" />
                <Entry Placeholder="Name" />
                <Entry Placeholder="Email" />
                <Entry Placeholder="Phone" />
                <Editor Placeholder="Bio" HeightRequest="100" />
                <Label Text="Tap the message box below to see keyboard avoidance"
                       FontSize="14"
                       TextColor="Gray"
                       Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
        
        <Border Grid.Row="1" 
                BackgroundColor="LightGray"
                Padding="20">
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="MessageEntry"
                       Placeholder="Type a message..." 
                       HorizontalOptions="FillAndExpand" />
                <Button Text="Send" />
            </HorizontalStackLayout>
        </Border>
    </Grid>
</ContentPage>
