<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeAreaDemos.Views.Example2RespectAll"
             SafeAreaEdges="All"
             Shell.NavBarIsVisible="False"
             Background="#a2d2ff"
             Title="Respect All Safe Areas">

       <Grid Background="White">

              <Grid RowDefinitions="50,75,*,75,30">
                     <!-- StatusBar Overlay -->
                     <Grid Background="{StaticResource OverlayColor}">
                            <Label Text="Top Overlay"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Black"/>
                     </Grid>


                     <Grid Padding="15,10"
                           Grid.Row="1"
                           HorizontalOptions="Start">
                            <!-- Back Button -->
                            <Border Grid.Column="0"
                                    Background="#FFFFFF"
                                    Stroke="Transparent"
                                    StrokeShape="RoundRectangle 20"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    VerticalOptions="Center">
                                   <Border.Shadow>
                                          <Shadow Brush="Black"
                                                  Opacity="0.3"
                                                  Radius="10"
                                                  Offset="0,4"/>
                                   </Border.Shadow>
                                   <Button Text="←"
                                           TextColor="#667eea"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           Background="Transparent"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Clicked="Button_Clicked">
                                          <Button.Padding>
                                                 <OnPlatform x:TypeArguments="Thickness">
                                                        <On Platform="Android"
                                                            Value="0,-10,0,0"/>
                                                 </OnPlatform>
                                          </Button.Padding>
                                   </Button>
                            </Border>

                     </Grid>

                     <ScrollView Grid.Row="2">
                            <VerticalStackLayout Padding="20,10,20,20"
                                                 Spacing="15">
                                   <!-- Title -->
                                   <Label Text="SafeAreaEdges = &quot;All&quot;"
                                          FontSize="24"
                                          FontAttributes="Bold"
                                          Margin="0,0,0,10"/>

                                   <!-- Behavior Section -->
                                   <Label Text="Behavior:"
                                          FontSize="18"
                                          FontAttributes="Bold"/>

                                   <Label Text="• Respects all safe area insets"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Content avoids system bars, notches, and the keyboard"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Ensures content is never obscured by any system UI element"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Maximum safety for critical content"
                                          FontSize="16"
                                          Margin="10,0,0,10"/>

                                   <!-- Use Cases Section -->
                                   <Label Text="Use Cases:"
                                          FontSize="18"
                                          FontAttributes="Bold"
                                          Margin="0,10,0,0"/>

                                   <Label Text="• Forms with critical input fields"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Login screens"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Settings pages"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Any UI where visibility of all content is essential"
                                          FontSize="16"
                                          Margin="10,0,0,5"/>

                                   <Label Text="• Contact lists and data entry screens"
                                          FontSize="16"
                                          Margin="10,0,0,0"/>
                            </VerticalStackLayout>
                     </ScrollView>

                     <Grid Padding="15,10"
                           Grid.Row="3">
                            <Entry Placeholder="Enter text here"/>
                     </Grid>

                     <!-- Bottom Overlay -->
                     <Grid Background="{StaticResource OverlayColor}"
                           Grid.Row="6">
                            <Label Text="Bottom Overlay"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="black"/>
                     </Grid>
              </Grid>
       </Grid>
</ContentPage>
