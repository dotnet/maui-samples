<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeAreaDemos.Views.Example6ImmersiveScrolling"
             Shell.NavBarIsVisible="False"
             SafeAreaEdges="Container">
       <Grid SafeAreaEdges="Container">
              <Grid
                     RowDefinitions="50,75,*,75,30">
                     <!-- StatusBar Overlay -->
                     <Grid Background="{StaticResource OverlayColor}"
                           SafeAreaEdges="None">
                            <Label Text="Top Overlay"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Black"/>
                     </Grid>


                     <Grid Padding="15,10"
                           Grid.Row="1"
                           HorizontalOptions="Start">
                            <!-- Back Button -->
                            <Border Grid.Column="0"
                                    Background="#FFFFFF"
                                    Stroke="Transparent"
                                    StrokeShape="RoundRectangle 20"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    VerticalOptions="Center">
                                   <Border.Shadow>
                                          <Shadow Brush="Black"
                                                  Opacity="0.3"
                                                  Radius="10"
                                                  Offset="0,4"/>
                                   </Border.Shadow>
                                   <Button Text="â†"
                                           TextColor="#667eea"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           Background="Transparent"
                                           Clicked="Button_Clicked"
                                           Padding="0"/>
                            </Border>
                     </Grid>
                     <ScrollView Grid.Row="2">
                            <VerticalStackLayout Spacing="10">
                                   <Image Source="dotnet_bot.png"
                                          Aspect="AspectFill"
                                          HeightRequest="300"/>
                                   <VerticalStackLayout Padding="20"
                                                        Spacing="15">
                                          <Label Text="Article Title"
                                                 FontSize="28"
                                                 FontAttributes="Bold"/>
                                          <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                                                 FontSize="16"/>
                                          <Label Text="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                                                 FontSize="16"/>
                                          <Label Text="Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
                                                 FontSize="16"/>
                                          <Label Text="Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                                                 FontSize="16"/>
                                          <Label Text="Scroll to see the immersive scrolling experience with content extending edge-to-edge."
                                                 FontSize="14"
                                                 Margin="0,20,0,0"/>
                                   </VerticalStackLayout>
                            </VerticalStackLayout>
                     </ScrollView>
                     <Grid Padding="15,10"
                           Grid.Row="3">
                            <Entry Placeholder="Enter text here"/>
                     </Grid>

                     <!-- Bottom Overlay -->
                     <Grid Background="{StaticResource OverlayColor}"
                           Grid.Row="6">
                            <Label Text="Bottom Overlay"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="black"/>
                     </Grid>
              </Grid>
       </Grid>
</ContentPage>
