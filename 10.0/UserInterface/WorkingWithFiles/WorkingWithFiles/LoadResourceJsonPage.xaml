<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="WorkingWithFiles.LoadResourceJsonPage"  
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:model="clr-namespace:WorkingWithFiles.Models"  
             Title="JSON Resource">  
    <Grid Margin="20">  
        <Grid.RowDefinitions>  
            <RowDefinition Height="Auto" />  
            <RowDefinition Height="*" />  
        </Grid.RowDefinitions>  
        <Label Text="Embedded Resource JSON File"   
               FontSize="18"  
               FontAttributes="Bold"  
               Grid.Row="0" />  
        <CollectionView x:Name="EarthquakesCollectionView"  
                        VerticalOptions="Fill"  
                        HorizontalOptions="Fill"  
                        x:DataType="model:Earthquake"  
                        Grid.Row="1">  
            <CollectionView.ItemTemplate>  
                <DataTemplate x:DataType="model:Earthquake">  
                    <Grid Padding="10">  
                        <Grid.RowDefinitions>  
                            <RowDefinition Height="Auto" />  
                            <RowDefinition Height="Auto" />  
                        </Grid.RowDefinitions>  
                        <Label Grid.Row="0"   
                               Text="{Binding Summary}"   
                               FontSize="16"  
                               FontAttributes="Bold" />  
                        <Label Grid.Row="1"   
                               Text="{Binding Data}"   
                               FontSize="14"  
                               TextColor="Gray" />  
                    </Grid>  
                </DataTemplate>  
            </CollectionView.ItemTemplate>  
        </CollectionView>  
    </Grid>  
</ContentPage>
