<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:views="clr-namespace:SwipeViewDemos"
             x:Class="SwipeViewDemos.MainPage"
			 Title="SwipeView demos"
             x:DataType="views:MainPage">
    <ScrollView>
        <StackLayout Padding="10">
            <!-- SwipeView Demos Section -->
            <Label Text="SwipeView Demos" FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,5" />
            <Button Text="SwipeView events"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewEventsPage}" />
            <Button Text="SwipeView mode and behavior"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewModeBehaviorPage}" />
            <Button Text="Swipe direction"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewDirectionPage}" />
            <Button Text="Swipe threshold"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewThresholdPage}" />
            <Button Text="SwipeView resources"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewResourcePage}" />
            <Button Text="SwipeView custom SwipeItem"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewCustomItemPage}" />
            <Button Text="SwipeView programmatic open and close"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SwipeViewProgrammaticPage}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
