<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkingWithMaps.Views.MapAppPage"
             Title="Native map app demo">
    <StackLayout Margin="10">
        <Label Text="These buttons launch the built-in Maps app for the platform." />
        <Button Text="Open location using Maps app"
                Clicked="OnLocationButtonClicked" />
        <Button Text="Get directions using Maps app"
                Clicked="OnDirectionButtonClicked" />
    </StackLayout>
</ContentPage>
