<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShapesDemos"
			 xmlns:views="clr-namespace:ShapesDemos.Views"
             x:Class="ShapesDemos.MainPage"
			 Title="Shapes demos"
             x:DataType="local:MainPage">
    <ScrollView>
        <StackLayout Padding="10">
            <!-- Basic Shapes Section -->
            <Label Text="Basic Shapes" FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,5" />
            <Button Text="Rectangle demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:RectangleDemoPage}" />
            <Button Text="Ellipse demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:EllipseDemoPage}" />
            <Button Text="Line demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:LineDemoPage}" />
            <Button Text="Polygon demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PolygonDemoPage}" />
            <Button Text="Polyline demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PolylineDemoPage}" />
            <Button Text="Brushes demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:BrushesDemoPage}" />
            <Button Text="Clipping demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:ClipDemoPage}" />
            <Button Text="Path demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PathDemoPage}" />
            <Button Text="Path geometry demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PathGeometryDemoPage}" />
            <Button Text="Path aspect demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PathAspectDemoPage}" />
            <Button Text="Path render transform demos"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PathRenderTransformDemoPage}" />
            <Button Text="Path render transform examples"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:PathRenderTransformExamplesDemoPage}" />

            <!-- More Advanced Shapes Section -->
            <Label Text="More Advanced Shapes" FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,5" />
            <Button Text="Analog clock demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:AnalogClockDemoPage}" />
            <Button Text="Baby elephant demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:BabyElephantDemoPage}" />
            <Button Text="Cat demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:CatDemoPage}" />
            <Button Text="Clip art man demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:ClipArtManDemoPage}" />
            <Button Text="Flower demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:FlowerDemoPage}" />
            <Button Text="Hello demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:HelloDemoPage}" />
            <Button Text="Monkey face demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:MonkeyFaceDemoPage}" />
            <Button Text="Spiral demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SpiralDemoPage}" />
            <Button Text="Moving spiral demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:SpiralRunnerDemoPage}" />
            <Button Text="Inverted Xamagon demo"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type views:InvertedXamagonDemoPage}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
