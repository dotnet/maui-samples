<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Animations"
    >

    <FontImageSource
        x:Key="PlayIcon"
        FontFamily="FontAwesome"
        Glyph="{x:Static local:IconFont.Play}"
        Color="White"
        Size="18"/>

    <FontImageSource
        x:Key="ResetIcon"
        FontFamily="FontAwesome"
        Glyph="{x:Static local:IconFont.Backward}"
        Color="White"
        Size="18"/>

    <FontImageSource
        x:Key="LoopIcon"
        FontFamily="FontAwesome"
        Glyph="{x:Static local:IconFont.Redo}"
        Color="White"
        Size="18"/>

    <FontImageSource
        x:Key="PauseIcon"
        FontFamily="FontAwesome"
        Glyph="{x:Static local:IconFont.Pause}"
        Color="White"
        Size="18"/>

</ResourceDictionary>