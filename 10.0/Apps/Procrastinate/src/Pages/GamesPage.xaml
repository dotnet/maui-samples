<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Services"
             x:Class="procrastinate.Pages.GamesPage"
             Title="{Binding MiniGames, Source={x:Static strings:AppStrings.Instance}}"
             BackgroundColor="{AppThemeBinding Light={StaticResource Nord6}, Dark={StaticResource Nord0}}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="{Binding MiniGames, Source={x:Static strings:AppStrings.Instance}}" 
                   FontSize="18" FontAttributes="Bold" 
                   TextColor="{AppThemeBinding Light={StaticResource Nord0}, Dark={StaticResource Nord6}}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="&#xf013;" 
                    AutomationId="SettingsBtn"
                    FontFamily="FontAwesomeSolid"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Nord3}, Dark={StaticResource Nord4}}"
                    FontSize="20"
                    Clicked="OnSettingsClicked"
                    VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <Label Text="&#xf11b;" 
                   FontFamily="FontAwesomeSolid"
                   FontSize="48" 
                   TextColor="{StaticResource Nord9}"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding MiniGames, Source={x:Static strings:AppStrings.Instance}}" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource Nord9}"
                   HorizontalOptions="Center"/>
            
            <Label Text="{Binding ProductivityOverrated, Source={x:Static strings:AppStrings.Instance}}"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource Nord3}, Dark={StaticResource Nord4}}"
                   HorizontalOptions="Center"/>

            <Button x:Name="ShuffleBtn" 
                    AutomationId="ShuffleBtn"
                    FontSize="16"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Nord4}, Dark={StaticResource Nord2}}"
                    TextColor="{AppThemeBinding Light={StaticResource Nord1}, Dark={StaticResource Nord5}}"
                    CornerRadius="12"
                    HeightRequest="44"
                    Clicked="OnShuffleClicked"/>

            <VerticalStackLayout x:Name="GamesContainer" Spacing="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
