<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Services"
             x:Class="procrastinate.Pages.Games.NumberGuessingGameView">
    <VerticalStackLayout Spacing="12">
        <Label x:Name="ResultLabel" 
               Text="{Binding ThinkingOfNumber, Source={x:Static strings:AppStrings.Instance}}" 
               HorizontalOptions="Center" 
               FontSize="16" 
               TextColor="{AppThemeBinding Light={StaticResource Nord3}, Dark={StaticResource Nord4}}"/>
        <Entry x:Name="GuessEntry"
               Placeholder="{Binding EnterGuess, Source={x:Static strings:AppStrings.Instance}}"
               Keyboard="Numeric"
               HorizontalOptions="Fill"
               BackgroundColor="{AppThemeBinding Light={StaticResource Nord4}, Dark={StaticResource Nord2}}"
               TextColor="{AppThemeBinding Light={StaticResource Nord0}, Dark={StaticResource Nord6}}"
               PlaceholderColor="{AppThemeBinding Light={StaticResource Nord3}, Dark={StaticResource Nord4}}"/>
        <Button x:Name="GuessBtn" 
                Text="{Binding Guess, Source={x:Static strings:AppStrings.Instance}}"
                BackgroundColor="{StaticResource Nord8}" 
                TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Nord0}}" 
                CornerRadius="12" 
                HeightRequest="44"
                Clicked="OnGuessClicked"/>
        <Label x:Name="AttemptsLabel" 
               Text="Attempts: 0" 
               HorizontalOptions="Center" 
               FontSize="14" 
               TextColor="{StaticResource Nord3}"/>
        <Button x:Name="NewGameBtn" 
                Text="{Binding NewGame, Source={x:Static strings:AppStrings.Instance}}"
                BackgroundColor="{AppThemeBinding Light={StaticResource Nord4}, Dark={StaticResource Nord2}}" 
                TextColor="{AppThemeBinding Light={StaticResource Nord1}, Dark={StaticResource Nord5}}" 
                CornerRadius="12" 
                HeightRequest="44"
                Clicked="OnNewGameClicked"/>
    </VerticalStackLayout>
</ContentView>
