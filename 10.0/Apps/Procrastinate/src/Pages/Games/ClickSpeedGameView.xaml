<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Services"
             x:Class="procrastinate.Pages.Games.ClickSpeedGameView">
    <VerticalStackLayout Spacing="16">
        <Button x:Name="ClickBtn" 
                Text="{Binding ClickMe, Source={x:Static strings:AppStrings.Instance}}"
                HeightRequest="80" 
                FontSize="22" 
                BackgroundColor="{StaticResource Nord8}" 
                TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Nord0}}" 
                CornerRadius="16" 
                IsEnabled="False"
                Clicked="OnClickBtnClicked"/>
        <Label x:Name="ScoreLabel" 
               Text="{Binding ScoreText}" 
               HorizontalOptions="Center" 
               FontSize="16" 
               TextColor="{AppThemeBinding Light={StaticResource Nord3}, Dark={StaticResource Nord4}}"/>
        <Button x:Name="StartBtn" 
                Text="{Binding StartChallenge, Source={x:Static strings:AppStrings.Instance}}"
                BackgroundColor="{AppThemeBinding Light={StaticResource Nord4}, Dark={StaticResource Nord2}}" 
                TextColor="{AppThemeBinding Light={StaticResource Nord1}, Dark={StaticResource Nord5}}" 
                CornerRadius="12" 
                HeightRequest="44"
                Clicked="OnStartClicked"/>
    </VerticalStackLayout>
</ContentView>
