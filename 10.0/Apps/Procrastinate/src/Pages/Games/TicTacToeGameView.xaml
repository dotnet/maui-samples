<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Services"
             x:Class="procrastinate.Pages.Games.TicTacToeGameView">
    <VerticalStackLayout Spacing="16">
        <Grid x:Name="GameGrid" ColumnDefinitions="60,60,60" RowDefinitions="60,60,60" ColumnSpacing="4" RowSpacing="4" HorizontalOptions="Center">
        </Grid>
        <Label x:Name="StatusLabel" 
               Text="{Binding YourTurn, Source={x:Static strings:AppStrings.Instance}}" 
               HorizontalOptions="Center" 
               FontSize="16" 
               TextColor="{AppThemeBinding Light={StaticResource Nord3}, Dark={StaticResource Nord4}}"/>
        <Button x:Name="ResetBtn" 
                Text="{Binding NewGame, Source={x:Static strings:AppStrings.Instance}}"
                BackgroundColor="{StaticResource Nord10}" 
                TextColor="White" 
                CornerRadius="12" 
                HeightRequest="44"
                Clicked="OnResetClicked"/>
        <Label x:Name="AIDebugLabel" 
               Text="" 
               HorizontalOptions="Center" 
               FontSize="10" 
               MaximumWidthRequest="300"
               LineBreakMode="WordWrap"
               TextColor="{StaticResource Nord4}"/>
    </VerticalStackLayout>
</ContentView>
