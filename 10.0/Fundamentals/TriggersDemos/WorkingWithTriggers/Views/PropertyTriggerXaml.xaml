<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="WorkingWithTriggers.PropertyTriggerXaml"
			 Padding="20, 50, 20, 0">

    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Style.Triggers>
                <Trigger TargetType="Entry"
                            Property="IsFocused" Value="True">
                    <Setter Property="BackgroundColor" Value="Yellow" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>

    <StackLayout Spacing="20">
        <Label Text="Property Trigger" FontSize="20" />
        <Label Text="BackgroundColor property change triggered by IsFocused" FontSize="10" />
        <Entry Placeholder="enter name">
        	<Entry.Triggers>
        		<Trigger TargetType="Entry"
                         Property="IsFocused" Value="True">
                    <Setter Property="BackgroundColor" Value="Yellow" />
                </Trigger>
        	</Entry.Triggers>
        </Entry>
        <Entry Placeholder="enter address" />
        <Entry Placeholder="enter city and state" />
    </StackLayout>
</ContentPage>
