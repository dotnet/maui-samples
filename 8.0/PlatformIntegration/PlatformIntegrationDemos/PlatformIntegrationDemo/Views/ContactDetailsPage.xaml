<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:PlatformIntegrationDemo.Views"
                x:Class="PlatformIntegrationDemo.Views.ContactDetailsPage"
                Title="Contact Details">
    <Grid RowDefinitions="Auto,*">
        <Label Text="View contact details."
               FontAttributes="Bold"
               Margin="12" />

        <VerticalStackLayout Padding="12,0,12,12"
                     Spacing="6"
                     Grid.Row="1">

            <Label FontAttributes="Bold"
                   Text="Id:" />
            <Label Text="{Binding Contact.Id}" />

            <Label FontAttributes="Bold"
                   Text="DisplayName:" />
            <Label Text="{Binding Contact.DisplayName}" />

            <Label FontAttributes="Bold"
                   Text="Prefix:" />
            <Label Text="{Binding Contact.NamePrefix}" />
            <Label FontAttributes="Bold"
                   Text="Given Name / First Name:" />
            <Label Text="{Binding Contact.GivenName}" />
            <Label FontAttributes="Bold"
                   Text="Middle Name:" />
            <Label Text="{Binding Contact.MiddleName}" />
            <Label FontAttributes="Bold"
                   Text="Family Name / Last Name:" />
            <Label Text="{Binding Contact.FamilyName}" />
            <Label FontAttributes="Bold"
                   Text="Suffix:" />
            <Label Text="{Binding Contact.NameSuffix}" />

            <Label FontAttributes="Bold"
                   Text="Numbers:" />
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Contact.Phones}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding PhoneNumber}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <Label FontAttributes="Bold"
                   Text="Emails:" />
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Contact.Emails}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding EmailAddress}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Grid>
</views:BasePage>
