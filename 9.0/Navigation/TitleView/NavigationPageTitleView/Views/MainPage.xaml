<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NavigationPageTitleView"
             x:Class="NavigationPageTitleView.MainPage"
             Title="Menu"
             x:DataType="local:MainPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
    </ContentPage.Resources>
    <StackLayout Margin="20">
        <Button Text="Cross-Platform TitleView"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type local:TitleViewPage}" />
        <Button Text="iOS Extended TitleView"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type local:iOSExtendedTitleViewPage}" />
        <Button Text="Android Extended TitleView"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type local:AndroidExtendedTitleViewPage}" />
    </StackLayout>
</ContentPage>
