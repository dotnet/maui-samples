<?xml version="1.0" encoding="UTF-8"?>
<NavigationPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
                x:Class="NavigationPageTitleView.iOSNavigationPage"
                BarBackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                BarTextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                ios:NavigationPage.PrefersLargeTitles="true"
                ios:NavigationPage.HideNavigationBarSeparator="true">

</NavigationPage>
