<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkingWithColors.ColorsInXaml"
             Title="Colors in XAML">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="ButtonBackColor">#F2BB66</Color>
            <Color x:Key="ButtonTextColor">#669EF2</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Spacing="15" Padding="20">
            
            <Label Text="Colors in XAML Demo" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Label Text="This demonstrates different ways to define colors in XAML:"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20" />

            <Label Text="Resource Dictionary Colors:"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />

            <Button Text="Button with Resource Colors"
                    BackgroundColor="{StaticResource ButtonBackColor}"
                    TextColor="{StaticResource ButtonTextColor}"
                    CornerRadius="8"
                    Padding="15,10" />

            <Button Text="Primary and Secondary Color Resource"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource Secondary}"
                    CornerRadius="8"
                    Padding="15,10" />

            <Label Text="Direct Color Values:"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,20,0,5" />

            <Button Text="Red Button"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10" />

            <Button Text="Blue Button (Hex)"
                    BackgroundColor="#0066CC"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10" />

            <Button Text="Green Button"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10" />

            <Label Text="Color Swatches:"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,20,0,5" />

            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="50,50" ColumnSpacing="5" RowSpacing="5">
                <Border BackgroundColor="#FF6B6B" Grid.Row="0" Grid.Column="0" />
                <Border BackgroundColor="#4ECDC4" Grid.Row="0" Grid.Column="1" />
                <Border BackgroundColor="#45B7D1" Grid.Row="0" Grid.Column="2" />
                <Border BackgroundColor="#96CEB4" Grid.Row="0" Grid.Column="3" />
                <Border BackgroundColor="#FFEAA7" Grid.Row="1" Grid.Column="0" />
                <Border BackgroundColor="#DDA0DD" Grid.Row="1" Grid.Column="1" />
                <Border BackgroundColor="#FFB6C1" Grid.Row="1" Grid.Column="2" />
                <Border BackgroundColor="#F0E68C" Grid.Row="1" Grid.Column="3" />
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>
