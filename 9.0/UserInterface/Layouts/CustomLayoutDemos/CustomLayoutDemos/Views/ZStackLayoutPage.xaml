<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:layouts="clr-namespace:CustomLayoutDemos.Layouts"
             x:Class="CustomLayoutDemos.Views.ZStackLayoutPage"
             Title="ZStack layout">
    <layouts:ZStackLayout Margin="20"
                          HorizontalOptions="Center"
                          VerticalOptions="Center">
        <Image Source="dotnet_bot.png"
               WidthRequest="300"
               HeightRequest="372"
               HorizontalOptions="Center" />
        <Label Text="Text over the image, aligned to the top."
               TextColor="Orange"
               FontSize="15"
               FontAttributes="Bold"
               VerticalOptions="Start"
               HorizontalOptions="Center" />
        <Label Text="Text over the image, in the middle."
               TextColor="LightGreen"
               FontSize="20"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
        <Label Text="Text over the image, aligned to the bottom."
               TextColor="Red"
               FontSize="15"
               FontAttributes="Bold"
               VerticalOptions="End"
               HorizontalOptions="Center" />
    </layouts:ZStackLayout>
</ContentPage>
