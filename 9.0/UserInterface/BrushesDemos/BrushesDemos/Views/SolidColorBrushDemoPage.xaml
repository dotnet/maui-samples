<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrushesDemos.Views.SolidColorBrushDemoPage"
             Title="Solid color brush demos">
    <ScrollView>
        <StackLayout Margin="20"
                     Spacing="6">
            <Label Text="SolidColorBrush (Predefined Brush)"
                   FontAttributes="Bold" />
            <Border Margin="0,20,0,0"
                    Background="{x:Static Brush.Indigo}"
                    Stroke="LightGray"
                    StrokeShape="RoundRectangle 12"
                    HeightRequest="120"
                    WidthRequest="120" />
            <Label Text="SolidColorBrush (Color)"
                   FontAttributes="Bold" />
            <Border Margin="0,20,0,0"
                    Background="DarkBlue"
                    Stroke="LightGray"
                    StrokeShape="RoundRectangle 12"
                    HeightRequest="120"
                    WidthRequest="120" />
            <Label Margin="0,20,0,0"
                   Text="SolidColorBrush (Hex)"
                   FontAttributes="Bold" />
            <Border Margin="0,20,0,0"
                    Stroke="LightGray"
                    Background="#FF9988"
                    StrokeShape="RoundRectangle 12"
                    HeightRequest="120"
                    WidthRequest="120" />
            <Label Margin="0,20,0,0"
                   Text="SolidColorBrush (Property Tag Syntax)"
                   FontAttributes="Bold" />
            <Border Margin="0,20,0,0"
                    Stroke="LightGray"
                    StrokeShape="RoundRectangle 12"
                    HeightRequest="120"
                    WidthRequest="120">
                <Border.Background>
                    <SolidColorBrush Color="LightSteelBlue" />
                </Border.Background>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>

