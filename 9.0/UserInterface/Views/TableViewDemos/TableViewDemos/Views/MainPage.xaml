<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:local="clr-namespace:TableViewDemos"  
            xmlns:views="clr-namespace:TableViewDemos"  
            x:Class="TableViewDemos.MainPage"  
            Title="TableView demos"  
            x:DataType="local:MainPage">
    <CollectionView ItemsSource="{Binding Pages}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding Text}" x:DataType="local:MenuItem">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer  
                           Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPage}}, Path=NavigateCommand}"  
                           CommandParameter="{Binding PageType}" />
                    </Label.GestureRecognizers>
                </Label>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
