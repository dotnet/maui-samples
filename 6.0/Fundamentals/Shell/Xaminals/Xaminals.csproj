	  </MauiXaml>
	  <MauiXaml Update="Views\CatsPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\DogDetailPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\DogsPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
